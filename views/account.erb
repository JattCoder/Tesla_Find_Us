<!DOCTYPE html>
<html>
    <head>
        <link type="text/css" href="/account.css" rel="stylesheet"></link>
        <title>Tesla - Account</title>
        <div id="logo_bar"><img id="logo" src="Tesla-logo.png" alt="Tesla"></div>
    </head>
    <body>
        <div id="logout">
            <form action="/logout" method="POST">
	            <input type="submit" id="lgbtn" value="Logout">
            </form>
        </div>
        <div id="chargers">
            <form action="/account/my_chargers" method="GET">
                <input type="submit" id="chrgbtn" value="My Chargers">
            </form>
        </div>
        <div id="shadow">
            <img id="content" src="teslamodels.png" alt="Tesla">
        </div>
        <header id="material">
            <div id="info">
                <h2 class="headofheader">Account Details</h2>
                <h4 class="infoofheader"><%=@user.name%></h4>
                <h4 class="infoofheader"><%=@user.email%></h4>
                <% if @collection.length == 0 %>
                    <form action="/tesla_collection/shop" method="GET">
	                    <input type="submit" id="explore" value="Shop Tesla">
                    </form>
                <% else %>
                    <form action="/account/sell_car" method="POST">
                        <input type="submit" id="explore" value="Sell Tesla">
                    </form>
                <% end %>
            </div>
            <div class="seprator"></div>
            <div id="lookup">
                <div id="nearme">
                    <div id="findit">
                        <form action="/account/search" method="POST">
                            <h2 class="headofheader">Superchargers Near me</h2>
	                        <input type="text" id="nearmeh" name="nearmeh" placeholder="City or Zipcode">
	                        <input type="submit" id="search" value="Search">
                        </form>
                    </div>
                    <div id="exploreit">
                        <form action="/account/route-planner" method="POST">
                            <h2 class="headofheader">Explore Route</h2>
                            <input type="text" id="start" name="start" placeholder="Start">
	                        <input type="text" id="destination" name="destination" placeholder="Destination">
	                        <input type="submit" id="explore" value="Explore Route">
                        </form>
                    </div>
                </div>
            </div>
        </header>
    </body>
</html>