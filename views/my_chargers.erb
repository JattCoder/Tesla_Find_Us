<!DOCTYPE html>
<html>
    <head>
    <link type="text/css" href="/my_chargers.css" rel="stylesheet"></link>
        <div id="logobar"><img id="logo" src="/Tesla-logo.png"></div>
        <div id="account">
            <form action="/account" method="GET">
                <input type="submit" id="acbtn" value="Account">
            </form>
        </div>
        <div id="logout">
            <form action="/logout" method="POST">
                <input type="submit" id="lgbtn" value="Logout">
            </form>
        </div>
        <title>Tesla - Chargers</title>
    </head>
    <body>
        <div class="helper">
            <h2 class="headofheader">My Superchargers</h2>
        </div>
        <div class="helper">
            <div class=<% @@my_chargers.each do |data| %>>
                <div class="box">
                    <div class="locationtitle"> <%= data["name"] %> </div>
                    <div class="data"> <%=   data["street"] %> </div><br>
                    <div class="datatwo"> <%=   data["city"] %> </div> <div class="datatwo"><%= data["state"] %></div> <div class="datatwo"><%= data["zip"] %></div><br>
                    <div class="datathree"> <%=   data["country"] %></div> <br><br>
                    <div class="secondtitle">Charging</div>
                    <div class="datathree"> <%= data["stalls"] %> </div> <div class="datathree">superchargers, up to</div> <div class="datathree"><%= data["power"] %> </div> <div class="datathree">kW</div><br><br>
                    <div class="action">
                        <form action="/account/charger/edit" method="POST">
                            <input type="hidden" id="id" name="id" value= <%= data["id"] %> >
                            <input type="hidden" id="user_id" name="user_id" value= <%= data["user_id"] %> >
                            <input type="submit" id="editchr" value="Edit">
                        </form>
                    </div>
                    <div class="action">
                        <form action="/account/charger/delete" method="POST">
                            <input type="hidden" id="id" name="id" value= <%= data["id"] %> >
                            <input type="hidden" id="user_id" name="user_id" value= <%= data["user_id"] %> >
                            <input type="submit" id="delchr" value="Delete">
                        </form>
                    </div>
                </div>
            <% end %></div>
            <div id="addcharger">
                <form action="/account/new_charger" method="POST">
                    <input type="submit" id="newchr" value="Add Supercharger">
                </form>
            </div>
        </div>
        <div id="shadow"><img id="con" src="/supercharging.png"></div>
    </body>
</html>